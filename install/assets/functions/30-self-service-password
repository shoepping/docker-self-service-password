#!/usr/bin/with-contenv bash

update_config() {
    print_debug "Updating '\$${1}' with value '${2}"
    sed -i -e "s#\$${1} = .*#\$${1} = \"${2}\";#g" ${NGINX_WEBROOT}/conf/config.inc.php
}

update_config_noquote() {
    print_debug "Updating \$${1} with value '${2}"
    sed -i -e "s#${1} = .*#${1} = ${2};#g" ${NGINX_WEBROOT}/conf/config.inc.php
}